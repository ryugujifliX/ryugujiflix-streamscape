
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  email        String        @unique
  username     String        @unique
  password     String
  avatar       String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  watchHistory WatchHistory[]
  watchlist    Watchlist[]
}

model Anime {
  id          Int           @id @default(autoincrement())
  title       String
  image       String
  synopsis    String
  rating      Float
  releaseYear Int
  type        String
  episodes    Int
  studios     String[]
  genres      String[]
  duration    String
  status      String
  watchHistory WatchHistory[]
  watchlist    Watchlist[]
}

model WatchHistory {
  id         String   @id @default(uuid())
  userId     String
  animeId    Int
  episodeId  Int
  timestamp  Int
  completed  Boolean  @default(false)
  lastWatched DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  anime      Anime    @relation(fields: [animeId], references: [id])
}

model Watchlist {
  id        String   @id @default(uuid())
  userId    String
  animeId   Int
  addedAt   DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  anime     Anime    @relation(fields: [animeId], references: [id])
}

